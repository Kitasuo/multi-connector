{
  "plugins": [
    "c4-cals",
    "broker"
  ],
  "protocol": "hook",
  "authConfig": {
    "url": "https://c4-prod-apim.azure-api.net/pot",
    "headers": {
      "CALS-API-KEY": "${apikey}"
    },
    "path": "/instances/${instance}/purchaseorders/${targetObject.VendorId}"
  },
  "dataObjects": [
    ""
  ],
  "dataPropertyMappings": {
    "OrderInformation": ""
  },
  "generalConfig": {
    "sourceName": {
      "dataObjectProperty": "vendorName"
    },
    "hardwareId": {
      "dataObjectProperty": "vendorId"
    }
  },
    "input": {
        "required": [
            "parameters.targetObject"
        ]
    },
  "output": {
    "contextValue": "https://standards.oftrust.net/v2/Context/DataProductOutput/OrderInformation/",
    "array": "order",
    "data": "data"
  }
}
